<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"	
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:textAppearance="?android:attr/textAppearanceListItemSmall"
    android:background="?android:attr/activatedBackgroundIndicator"
	android:minHeight="?android:attr/listPreferredItemHeightSmall"
	>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingBottom="@dimen/swype_item_vertical_margin"
	    android:paddingLeft="@dimen/swype_item_horizontal_margin"
	    android:paddingRight="@dimen/swype_item_horizontal_margin"
	    android:paddingTop="@dimen/swype_item_vertical_margin"
	     >
	    
	    <TextView
	        android:id="@+id/swype_item_name"
			android:textColor="@color/white_color"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:textSize="@dimen/swype_item_textSize"
	        android:text="1" />
	    
	    <TextView
	        android:id="@+id/swype_item_count"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="right|center_vertical"
	        android:text="2"
	        android:textColor="@color/red_custom_color"
	        android:textSize="@dimen/swype_item_textSize" />

		<TextView
			android:id="@+id/swype_item_section_name"
			android:layout_width="@dimen/zero_dp"
			android:layout_height="@dimen/zero_dp"
			android:gravity="right|center_vertical"
			android:text="3"
			android:visibility="invisible"
			android:textSize="@dimen/swype_item_textSize" />

	</LinearLayout>
	
</LinearLayout>