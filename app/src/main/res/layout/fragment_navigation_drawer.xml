<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/blue_custom_color"
    tools:context="com.taktilidu.sporttimer.NavigationDrawerFragment"	
     >

    <ListView 
        android:id="@+id/swypeList"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@color/blue_custom_color"
	    android:choiceMode="none"
	    android:divider="@color/blue_custom_poor_color"
	    android:dividerHeight="1dp"
	    android:layout_weight="0"
	    android:listSelector="@color/blue_custom_poor_color"
	     />
	<LinearLayout
	   	 	android:layout_width="match_parent"
	    	android:layout_height="match_parent"
			android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingTop="@dimen/activity_vertical_margin"
		    android:orientation="vertical"
	   		android:layout_weight="1">
	   		
	    <TextView
            android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text=""/>
	    
	    <ImageView
		    android:id="@+id/imageBottomTimer"		    
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:layout_gravity="bottom|center"
		    android:src="@drawable/ic_bottom_timer" />
	    
	 </LinearLayout>
    
</RelativeLayout>