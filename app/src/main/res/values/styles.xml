<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- <item name="android:actionBarStyle">@style/MyActionBar</item> -->
        <item name="android:listViewStyle">@style/CustomListView</item>
        <item name="android:toolbarStyle">@style/CustomToolbar</item>
        <item name="android:actionBarStyle">@style/CustomToolbar</item>

        <item name="color">@color/red_custom_color</item>
        <!-- change Title background -->
        <item name="colorPrimary">@color/blue_custom_color</item>
        <item name="colorPrimaryDark">@color/red_custom_color</item>
        <item name="colorAccent">@color/red_custom_color</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WindowTitleBackground">
        <item name="android:background">@color/red_custom_color</item>
        <item name="android:textColor">@color/blue_custom_color</item>
    </style>

    <style name="AppThemeNoTitleBar" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppThemeFullscreen" parent="AppBaseTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppThemeNoTitleBarFullscreen" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- <item name="android:background">@color/white</item>  -->
    </style>

    <style name="AppThemeBlackNoTitleBar" parent="android:Theme.Black.NoTitleBar"></style>

    <style name="AppThemeLightNoTitleBar" parent="android:Theme.Light.NoTitleBar"></style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/titlebackgroundcolor</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:iconifiedByDefault">@drawable/ic_action_logo</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">@drawable/ic_up_caret</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/blue_custom_color</item>
    </style>

    <!-- тень -->
    <style name="TextShadow">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">@xml/selector_shadow</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- custom ListView -->
    <style name="CustomListView" parent="@android:style/Widget.AbsListView">
        <item name="android:background">@color/white_color</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:listSelector">@drawable/row_background</item>
        <item name="android:cacheColorHint">@color/white_color</item>
    </style>

    <!-- custom Toolbar -->
    <style name="CustomToolbar" parent="@android:style/Widget.Toolbar">
        <item name="android:color">@color/blue_custom_color</item>
        <item name="android:textColor">@color/blue_custom_color</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Zeplin -->
    <style name="TextStyleToolbar">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">-4sp</item>
        <item name="android:textColor">@color/white_color</item>
    </style>
    <style name="TextStyleTab">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="tabIndicatorColor">@color/white_color</item>
    </style>
    <style name="TextStyleTrainingToday">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/red_custom_color</item>
    </style>

    <style name="TextStyleTrainingName">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_87</item>
    </style>
    <style name="TextStyleTrainingStep">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/warm_grey</item>
    </style>
    <style name="TextStyleTrainingTotalTime">
        <item name="android:gravity">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/warm_grey</item>
    </style>
    <style name="TextStyleExercise">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">#20374b</item>
    </style>
    <style name="TextStyleExerciseSelected">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/white_color</item>
    </style>
    <style name="TextStyleExerciseNumber">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">-2sp</item>
        <item name="android:textColor">#deffffff</item>
    </style>
    <style name="TextStyleExerciseTime">
        <item name="android:gravity">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">#8f000000</item>
    </style>
    <style name="TextStyleExerciseTimeSelected">
        <item name="android:gravity">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">#b3ffffff</item>
    </style>

</resources>